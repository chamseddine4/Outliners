
{% extends 'base/base.html.twig ' %}
{% form_theme formProfil  'bootstrap_4_layout.html.twig' %}
 
{% block titre %}
inscription
{% endblock %} 




 


{% block corp%}



  <!-- inscri section -->
  <section class="book_section layout_padding">
   
      <div class="row">
     <div class="col-md-6">
          <div class="form_container">
          <form method="POST" class="register-form" id="register-form" style="margin-left: 51%;margin-top: 5%;"> 
           {{ form_start (formProfil)}}
                <h2>
                    Inscription
                   </h2>
                   <br>
                   
   
              <div class="form-group">
                    <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                  {{ form_row( formProfil.username,{'attr' : {'placeholder' : "saisir votre nom"}}) }}
                </div>
                          <div class="form-group">
                    <label for="Mobile Number"><i class="zmdi zmdi-account material-icons-name"></i></label>
                   {{ form_row( formProfil.email,{'attr' : {'placeholder' : "saisir votre numero de telf"}}) }}
                </div>
                   
               
                <div class="form-group">
                    <label for="email"><i class="zmdi zmdi-email"></i></label>
              {{ form_row( formProfil.password,{'attr' : {'placeholder' : "saisir votre email"}}) }}
                </div>
               

                <div class="form-group">
                    <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                  
                {{ form_row( formProfil.confirm_password,{'attr' : {'placeholder' : "saisir votre mot de passe"}}) }}
                </div>
                
                <div class="form-group">
                    <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                    <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                </div>
               
                <div class="form-group form-button">
                    <input type="submit" name="signup" id="signup" class="form-submit" value="Register"/>
                </div>
              
        {{ form_end (formProfil)}}
             </form>

          </div>
        </div>
        <div class="col-md-6">
            <div class="signup-image" style="margin-top:12%;margin-left:20% ">
                <figure><img style="width:60%;height:40%;margin-top:15%" src="images/signup-image.jpg" alt="sing up image"></figure>
                 &nbsp; <button href="{{path('login')}}" type="submit" class="btn btn-info"> &nbsp; <a href="{{path('inscription')}}" style="color:white"> &nbsp; I am already member</a></button>

            </div>
        </div>
      </div>
    </div>
  </section>
  <!-- end book section -->

         
         
            
{%endblock%}







