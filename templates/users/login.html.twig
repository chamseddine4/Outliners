


{% extends 'base/base.html.twig ' %}


{% block titre %}
login
{% endblock %} 







{% block corp%}


  <!-- inscri section -->
  <section class="book_section layout_padding">
   
    <div class="row">
   <div class="col-md-6">
        <div class="form_container">
       
          
                     <h2 style="margin-left:50%" >
                     Connexion
                    </h2>
                     <br>

                   {% if hasError %}

                  <div class="btn-danger" style="margin-left:25%"><center> Une erreur est survenue, le email de utilisateur ou alors le mot de passe <br> est invalide </center></div>
                  
                   {% endif %}

                 <form  action="{{path('login')}}"  method="POST" class="register-form" id="register-form" style="margin-left: 51%;margin-top: 8%;">  
                 <div class="form-group">

                    <label for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                    <input type="text" name="_username" placeholder="Adresse email" required />
                </div><br>
                <div class="form-group">
                    <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                    <input type="password" name="_password" placeholder="mot de passe"/>
                </div>

            <div class="form-group">
                                <input type="checkbox" name="remember-me" id="remember-me" class="agree-term" />
                                <label for="remember-me" class="label-agree-term"><span><span></span></span>Remember me</label>
                            </div>
                            <div class="form-group form-button">
                                <button type="submit" class="btn-success"> connexion !</button>
                            </div>
          </form>










        </div>
      </div>

      <div class="col-md-6">
        <div class="signin-image" style="margin-top:8%;margin-left:15%">
            <figure><img src="images/signin-image.jpg" alt="sing up image"></figure>
             &nbsp; <button href="{{path('inscription')}}" type="submit" class="btn btn-info"> &nbsp; <a href="{{path('inscription')}}" style="color:white"> &nbsp; Create an account</a></button>
                   

        </div>
      </div>
    </div>
  </div>
</section>
